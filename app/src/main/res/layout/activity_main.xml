<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <!-- The App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FitConnect"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginTop="48dp"/>

    <!-- The Final Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay Fit, Wherever You Go."
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"/>

    <!-- The circular CardView for the Daily Goal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_step_card"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardCornerRadius="90dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_footprint_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_footprint"
                app:tint="#666666"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_step_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 / 1000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#E91E63"/>

            <TextView
                android:id="@+id/tv_step_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Steps"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#666666"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- The Feature buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btn_find_gym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            android:text="Find a Nearby Gym"
            android:padding="14dp"
            app:icon="@drawable/ic_gym_location"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_find_buddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            android:text="Find a Workout Buddy"
            android:padding="14dp"
            app:icon="@drawable/ic_buddy_group"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_bmi_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            android:text="BMI Calculator"
            android:padding="14dp"
            app:icon="@drawable/ic_bmi_scale"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</LinearLayout>